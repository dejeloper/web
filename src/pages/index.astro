---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Portafolio Jhonatan Guerrero">
  <main class="bg-gray-50 min-h-screen w-full">
    <Header title="dejeloper" />
    <div id="home" class="flex flex-col h-screen relative">
      <div
        id="container"
        class="container mx-auto mt-[80px] relative max-h-[600px] px-10"
      >
        <div id="content" class="">
          <div id="hero-main" class="flex justify-center items-center gap-10">
            <div id="hero-text">
              <h3 class="text-3xl text-slate-600">
                Bienvenida a mi portafolio
              </h3>
              <h1 class="text-4xl font-bold text-slate-900">
                Jhonatan Guerrero
              </h1>
              <h3></h3>
            </div>
            <div id="hero-img" class="w-80">
              <picture>
                <img src="./images/me_01.jpg" alt="Foto de Jhonatan Guerrero" />
              </picture>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
