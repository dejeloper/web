---
import ExperenceItem from "../Experence/ExperenceItem.astro";
import { data as experiences } from "@/data/experience";
---

<h3 class="text-3xl md:mt-12 md:mb-8 my-4 text-gray-100 mx-auto">
  Experiencia Laboral
</h3>
<div class="w-full max-w-3xl mx-auto my-4 cursor-default">
  <div class="bg-gris/30 border-white border rounded-xl px-4 py-0">
    {experiences.map((experience) => <ExperenceItem {...experience} />)}
  </div>
</div>
