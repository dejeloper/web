---
import LocationIcon from "@/icons/LocationIcon.astro";
import HeroBadge from "./HeroBadge.astro";
import HeroIconsRRSS from "./HeroIconsRRSS.astro";
import FlagColIcon from "@/icons/FlagColIcon.astro";
---

<div class="flex flex-col justify-center md:justify-start hero-text text-five">
  <h1 class="sr-only">Jhonatan Guerrero</h1>
  <h2 class="text-3xl md:text-start text-center">
    Soy <span class="font-bold text-three">Jhonatan Guerrero</span>
  </h2>
  <article
    class="flex flex-col md:text-start text-center md:mt-3 text-wrap font-semibold"
  >
    <h2>
      <span class="block">
        Ingeniero de Sistemas y Desarrollador de Software.
      </span>
      <span class="text-three">+10</span>
      <span class=""> años de experiencia.</span>
    </h2>
  </article>
  <article class="flex items-center my-3 gap-2 md:justify-start justify-center">
    <LocationIcon class="w-8 h-8" />
    <h2>Desde Bogotá - Colombia</h2>
    <FlagColIcon class="w-8 h-8" />
  </article>
  <HeroIconsRRSS />
  <HeroBadge />
</div>
