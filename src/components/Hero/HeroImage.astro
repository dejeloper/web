<style>
  .img-profile {
    animation: morph 5s ease-in-out infinite;
    background-position: 50%;
    background-repeat: no-repeat;
    background-size: cover;
    border: 5px solid #1564bf;
    border-radius: 30% 60% 70% 40%/50% 60% 30% 60%;
    position: relative;
    transition: all 1s ease-in-out;
  }

  @keyframes morph {
    0% {
      border-radius: 30% 60% 70% 40%/50% 60% 30% 60%;
    }
    50% {
      border-radius: 60% 50% 40% 80%/60% 80% 40% 50%;
    }
    100% {
      border-radius: 30% 60% 70% 40%/50% 60% 30% 60%;
    }
  }
</style>

<div class="hero-img w-80">
  <picture>
    <img
      class="img-profile"
      src="./images/me_02.jpg"
      alt="Foto de Jhonatan Guerrero"
      title="Foto de Jhonatan Guerrero"
    />
  </picture>
</div>
