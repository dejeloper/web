---
import Github from "../components/icons/GithubIcons.astro";
import Twitter from "../components/icons/TwitterXIcon.astro";
import Linkedin from "../components/icons/LinkedinIcon.astro";
import Location from "../components/icons/LocationIcon.astro";
import FlagCol from "../components/icons/FlagColIcon.astro";
---

<style>
  .img-profile {
    animation: morph 5s ease-in-out infinite;
    background-position: 50%;
    background-repeat: no-repeat;
    background-size: cover;
    border: 5px solid #1564bf;
    border-radius: 30% 60% 70% 40%/50% 60% 30% 60%;
    position: relative;
    transition: all 1s ease-in-out;
  }

  @keyframes morph {
    0% {
      border-radius: 30% 60% 70% 40%/50% 60% 30% 60%;
    }
    50% {
      border-radius: 60% 50% 40% 70%/60% 80% 40% 40%;
    }
    100% {
      border-radius: 30% 60% 70% 40%/50% 60% 30% 60%;
    }
  }
</style>

<section class="flex flex-row justify-center items-center gap-10 mb-10">
  <div class="hero-text text-five">
    <h2 class="text-3xl">Hola, este es mi portafolio</h2>
    <h1 class="text-3xl font-bold text-three">Jhonatan Guerrero</h1>
    <h2 class="mt-3">Ingeniero de Sistemas y Desarrollador de Software.</h2>
    <div class="flex items-center my-3 gap-2">
      <Location />

      <p class="text-five">Desde Bogot√° - Colombia</p>
      <FlagCol />
    </div>
    <div class="flex flex-row items-center mt-6 text-gris opacity-70 gap-2">
      <a
        href="https://www.linkedin.com/in/dejeloper/"
        target="_blank"
        class="hover:scale-125 transition ease-in-out duration-100"
        title="Linkedin"
      >
        <Linkedin />
      </a>

      <a
        href="https://github.com/dejeloper"
        target="_blank"
        class="hover:scale-125 transition ease-in-out duration-100"
        title="Github"
      >
        <Github />
      </a>

      <a
        href="https://twitter.com/dejeloper"
        target="_blank"
        class="hover:scale-125 transition ease-in-out duration-100"
        title="Twitter"
      >
        <Twitter />
      </a>
    </div>
  </div>
  <div class="hero-img w-80">
    <picture>
      <img
        class="img-profile"
        src="./images/me_01.jpg"
        alt="Foto de Jhonatan Guerrero"
        title="Foto de Jhonatan Guerrero"
      />
    </picture>
  </div>
</section>
